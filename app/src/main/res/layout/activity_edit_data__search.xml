<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditData_Search">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Search Meter Data to Edit"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/SearchMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp"
        android:layout_toStartOf="@+id/btnEditGo"
        android:text="Search Meter" />

    <EditText
        android:id="@+id/editSearchMeter"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SearchMeter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnEditGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="243dp"
        android:onClick="searchDetails"
        android:text="Go" />
</RelativeLayout>